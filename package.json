{
  "name": "conclave",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "docker:up": "docker-compose -f ./docker/docker-compose.yml up --detach",
    "docker:down": "docker-compose -f ./docker/docker-compose.yml down",
    "build": "webpack --config ./src/webpack/prod.config.js --mode production",
    "dev:db": "npm run docker:up && npm run wait",
    "dev:server": "nodemon ./src/server/index.js",
    "dev:ui": "webpack-dev-server --config ./src/webpack/dev.config.js --mode development",
    "test:server": "jest --config=jest.config.js --detectOpenHandles --forceExit --testPathPattern='(src).*(__tests__).*.test.js'",
    "test:ui": "jest ./src/ui --config=jest.ui.config.js --detectOpenHandles --forceExit  ",
    "lint": "eslint ./src",
    "prewatch": "npm-run-all docker:up wait migrate:up seed:run",
    "watch": "npm-run-all --parallel dev:**",
    "postwatch": "npm run docker:down",
    "migrate:up": "knex migrate:latest",
    "migrate:back": "knex migrate:rollback",
    "migrate:create": "typesetter migrate",
    "model": "typesetter model",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "fixtures": "node ./src/utils/fixtures",
    "seed:run": "knex seed:run",
    "postseed:run": "npm run test:server -- -u",
    "wait": "node ./src/scripts/delay.js",
    "test": "npm-run-all test:server test:ui",
    "test:full": "npm-run-all docker:up wait migrate:up test migrate:down docker:down"
  },
  "dependencies": {
    "@hot-loader/react-dom": "^16.8.4",
    "@reach/router": "^1.2.1",
    "@storybook/addon-events": "^5.0.1",
    "apollo-boost": "^0.3.1",
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.5.1",
    "apollo-link-context": "^1.0.17",
    "apollo-link-http": "^1.5.14",
    "apollo-server-hapi": "^2.4.8",
    "bcrypt": "^3.0.4",
    "blipp": "^3.1.2",
    "bookshelf": "^0.14.2",
    "chalk": "^2.4.2",
    "dataloader": "^1.4.0",
    "dateformat": "^3.0.3",
    "deep-extend": "^0.6.0",
    "good": "^8.1.2",
    "good-console": "^8.0.0",
    "graphql": "^14.1.1",
    "handlebars": "^4.1.0",
    "hapi": "^18.1.0",
    "hapi-cors-headers": "^1.0.3",
    "hapi-router": "^4.0.0",
    "inert": "^5.1.2",
    "ioredis": "^4.6.2",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.0",
    "knex": "^0.16.3",
    "lodash.difference": "^4.5.0",
    "merge-deep": "^3.0.2",
    "mini.css": "^3.0.1",
    "pg": "^7.8.2",
    "prop-types": "^15.7.2",
    "react": "^16.8.4",
    "react-apollo": "^2.5.2",
    "react-apollo-hooks": "^0.4.3",
    "react-dom": "^16.8.4",
    "react-form-elements": "^2.3.1",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^4.8.0",
    "react-jss": "^8.6.1",
    "react-use": "^5.6.0",
    "styled-components": "^4.1.3",
    "the-platform": "^0.10.0",
    "vision": "^5.4.4",
    "xtconf": "^4.0.1",
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
